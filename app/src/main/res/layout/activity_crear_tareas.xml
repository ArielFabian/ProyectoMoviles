<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="monospace"
        android:text="Creacion de Tareas"
        android:textColor="#0D41A6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtnombretarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtnombretarea"
        android:layout_width="357dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ingrese el nombre de la tarea"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtfechainicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtfechainicio"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ingrese la fecha de Inicio"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/txtfechaestimada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnombretarea" />

    <EditText
        android:id="@+id/txtfechaestimada"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ingrese la estimada de Finalizacion"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/txtfechafinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfechainicio" />

    <EditText
        android:id="@+id/txtfechafinal"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Ingrese la fecha de Finalizacion"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btncreartarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfechaestimada" />

    <Button
        android:id="@+id/btncreartarea"
        android:layout_width="151dp"
        android:layout_height="54dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#0D41A6"
        android:fontFamily="monospace"
        android:text="Crear Tarea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfechafinal" />
</androidx.constraintlayout.widget.ConstraintLayout>